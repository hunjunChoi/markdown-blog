<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Blog</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
            crossorigin="anonymous"
        />
    </head>
    <body>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"
        ></script>

        <!-- index view of all our articles -->
        <div class="container">
            <!-- margin bottom of 4... space on bottom -->
            <h1 class="mb-4">Blog Articles</h1>
            <!-- green button -->
            <a href="/articles/new" class="btn btn-success">New Article</a>

            <% articles.forEach(article => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <%= article.title %>

                    <div class="card-subtitle text-muted mb-2">
                        <!-- text-muted... gray color -->
                        <%= article.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text mb-2"><%= article.description %></div>

                    <!-- button to show access article -->
                    <a
                        href="/articles/<%= article.slug %>"
                        class="btn btn-primary"
                        >Read More</a
                    >
                    <a
                        href="articles/edit/<%= article.id %>"
                        class="btn btn-info"
                        >Edit</a
                    >

                    <!-- 
                        normal link: <a href=""> - anchor tag
                        * when google crawls site... click every link tag 
                        * using link tag to delete route in article 
                        * everytime Google indexes site.. delete everything in DB

                        * USE FORM
                     -->
                    <!-- include method override... use ? -->
                    <!-- d-inline... change form to be inline -->
                    <form
                        action="/articles/<%= article.id %>?_method=DELETE"
                        method="POST"
                        class="d-inline"
                    >
                        <button type="submit" class="btn btn-danger">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
            <% }) %>
        </div>
    </body>
</html>
