        <div class="container">
            <h1 class="mb-4">Edit Article</h1>

            <!-- method to have ovverride
                supply edit... post to _method=PUT... 
                PUT... HTTP method for updating 
                put id in url -->
            <!-- set up PUT route -->
            <form
                action="/articles/<%= article.id %>?_method=PUT"
                method="POST"
            >
                <%- include('_form_fields') %>
            </form>
        </div>
    </body>
